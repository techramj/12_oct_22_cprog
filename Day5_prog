#include<stdio.h>
void main() {
	for (int i = 1; i <= 4; i++) {
		//print space
		for (int j = 1; j <= 4-i;j++) {
			printf(" ");
		}

		//print start
		for (int j = 1; j <= 2*i-1; j++) {
			printf("*");
		}

		printf("\n");
	}
}


