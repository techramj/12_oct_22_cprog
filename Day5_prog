 void main() {
	int k;
	for (int i = 1; i <= 7; i++) {
		k = 4 - i;
		k=k < 0 ? k * -1 : k;
		//print space
		for (int j = 1; j <= k;j++) {
			printf(" ");
		}
		//print start
		for (int j = 1; j <= 2*(4-k)-1; j++) {
			printf("*");
		}

		printf("\n");
	}
}




